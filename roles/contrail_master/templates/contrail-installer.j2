# Configs section
# Note: using ".." for ports, because in v1 there is a bug
# which leads to an error
# "..error unmarshaling JSON: json: cannot unmarshal number into Go value of type string.."
# (https://github.com/kubernetes/kubernetes/issues/2763)
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: env
  namespace: kube-system
data:
  AAA_MODE: {{ aaa_mode }}
  ANALYTICS_API_VIP: {{ contrail_vip }}
  ANALYTICS_NODES: {{ contrail_nodes }}
  ANALYTICSDB_NODES: {{ contrail_nodes }}
  AUTH_MODE: {{ auth_mode }}
  CLOUD_ORCHESTRATOR: {{ CLOUD_ORCHESTRATOR }}
  CONFIG_API_VIP: {{ contrail_vip }}
  CONFIG_NODES: {{ contrail_nodes }}
  CONFIGDB_NODES: {{ contrail_nodes }}
  CONTROL_NODES: {{ contrail_nodes }}
  CONTROLLER_NODES: {{ contrail_nodes }}
  KAFKA_NODES: {{ contrail_nodes }}
  LOG_LEVEL: {{ LOG_LEVEL }}
  METADATA_PROXY_SECRET: {{ METADATA_PROXY_SECRET }}
  PHYSICAL_INTERFACE: {{ vrouter_physical_interface }}
  RABBITMQ_NODES: {{ contrail_nodes }}
  RABBITMQ_NODE_PORT: "{{ rabbitmq_node_port }}"
  REDIS_NODES: {{ contrail_nodes }}
  VROUTER_GATEWAY: {{ vrouter_gateway }}
  WEBUI_NODES: {{ contrail_nodes }}
  WEBUI_VIP: {{ contrail_vip }}
  ZOOKEEPER_NODES: {{ contrail_nodes }}
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: nodemgr-config
  namespace: kube-system
data:
  DOCKER_HOST: "unix://mnt/docker.sock"
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: contrail-analyticsdb-config
  namespace: kube-system
data:
  CASSANDRA_SEEDS: {{ contrail_nodes }}
  CASSANDRA_CLUSTER_NAME: Contrail
  CASSANDRA_START_RPC: "true"
  CASSANDRA_LISTEN_ADDRESS: auto
  CASSANDRA_PORT: "9160"
  CASSANDRA_CQL_PORT: "9042"
  CASSANDRA_SSL_STORAGE_PORT: "7001"
  CASSANDRA_STORAGE_PORT: "7000"
  CASSANDRA_JMX_LOCAL_PORT: "7200"
---
apiVersion: v1
